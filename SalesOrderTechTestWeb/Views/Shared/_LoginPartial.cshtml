@using Microsoft.AspNetCore.Identity
@using SalesOrderTechTestWeb.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <ul class="dropdown-content">
            <li><a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account"><i class="fa fa-user" aria-hidden="true"></i><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Manage Account</a></li>
            <li>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</button>
                </form>
            </li>
        </ul>
    
}
</div>
