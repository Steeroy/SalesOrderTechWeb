@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/identity/Pages/_AuthLayout.cshtml";
}

<div class="row d-flex align-items-center">
    <div class="col-md-6">
        <section>
            <form id="account" method="post" class="d-flex flex-column gap-3">
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex flex-column gap-2">
                    <label asp-for="Input.Email" class="form-label"></label>

                    <div class="icon-input">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter your username" autocomplete="username" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column gap-2">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <div class="icon-input">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input asp-for="Input.Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div>
                    <p>
                        Forgot your password? <a id="forgot-password" asp-page="./ForgotPassword">Recover here.</a>
                    </p>
                </div>

                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"><span>Log in</span><i class="fa fa-arrow-right" aria-hidden="true"></i></button>
                </div>
               
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section class="d-flex align-items-center justify-content-center">
            <h1 class="welcome-text">Welcome<br/>Back</h1>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
